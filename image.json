{
  "builders": [{
    "type": "amazon-ebs",
    "region": "eu-west-1",
    "instance_type": "t2.micro",
    "source_ami": "ami-02a39bdb8e8ee056a",
    "ssh_username": "ec2-user",
    "ami_name": "updated {{timestamp}}"
  }],
  "provisioners": [
    {
        "type":  "file",
        "source": "files/r1soft.repo",
        "destination": "/tmp/r1soft.repo"
    },
    {
      "type":  "shell",
      "inline":[
          "sudo mv /tmp/r1soft.repo /etc/yum.repos.d/r1soft.repo",
          "sudo yum update -y",
          "sudo yum install serverbackup-enterprise-agent",
          "sudo systemctl start cdp-agent",
          "sudo systemctl start cdp-agent",
          "sudo systemctl enable cdp-agent",
          "sudo systemctl stop firewalld"
    ]
    }
  ]
}